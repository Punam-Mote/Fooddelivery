<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/linearLayout"
    tools:context=".ui.LoginActivity">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="167dp"
        android:layout_height="174dp"
        android:layout_marginBottom="18dp"
        android:layout_gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/editTextTextPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/delivery" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginTop="12dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/email" />
        <EditText
            android:id="@+id/etEmail"
            android:layout_width="291dp"
            android:layout_height="66dp"
            android:layout_weight="1"
            android:inputType="textPersonName"
            android:hint="Email" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:layout_marginTop="12dp"
            app:srcCompat="@drawable/password" />
        <EditText
            android:id="@+id/etPassword"
            android:layout_width="291dp"
            android:layout_height="66dp"
            android:layout_weight="1"
            android:inputType="textPassword"
            android:hint="Password" />

    </LinearLayout>

    <CheckBox
        android:layout_margin="10dp"
        android:layout_gravity="left"
        android:id="@+id/chkRememberMe"
        android:text="Remember Username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
        android:id="@+id/btnLogin"
        android:layout_width="262dp"
        android:layout_height="54dp"
        android:layout_marginTop="20dp"
        android:text="Login"
        android:layout_gravity="center"
        app:backgroundTint="#F046A34A" />
        <Button
            android:id="@+id/btnUser"
            android:layout_width="260dp"
            android:layout_height="55dp"
            android:text="Sign up as User"
            android:layout_gravity="center"
            app:backgroundTint="#fa8231" />
        <Button
            android:id="@+id/btnSupplier"
            android:layout_width="260dp"
            android:layout_height="55dp"
            android:text="Sign up as Restaurant"
            android:layout_gravity="center"
            app:backgroundTint="#0abde3" />
    <Button
        android:id="@+id/btnFacebook"
        android:layout_width="260dp"
        android:layout_height="55dp"
        android:text="Sign up with Facebook"
        android:layout_gravity="center"
        app:backgroundTint="#F03F55D3" />

    <Button
        android:id="@+id/btnGoogle"
        android:layout_width="263dp"
        android:layout_height="56dp"
        android:text="Sign up with google"
        android:layout_gravity="center"
        app:backgroundTint="#DAA8190E" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="192dp"
            android:layout_height="37dp"
            android:layout_weight="1"
            android:fontFamily="serif"
            android:gravity="center"
            android:text="Already have an account ?"/>

        <TextView
            android:id="@+id/tvSignup"
        android:layout_width="192dp"
        android:layout_height="37dp"
        android:layout_weight="1"
        android:fontFamily="serif"
        android:text="SignUp ?"
        android:backgroundTint="#126115" />

    </LinearLayout>

</LinearLayout>