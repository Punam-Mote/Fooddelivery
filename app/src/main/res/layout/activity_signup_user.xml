<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SignupUserActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Signup to Food App"
        android:gravity="center"
        android:textSize="38sp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:hint="Username"
        android:layout_marginTop="35dp"
        android:textSize="25sp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:hint="Email"
        android:layout_marginTop="40dp"
        android:textSize="25sp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:hint="Password"
        android:layout_marginTop="40dp"
        android:textSize="25sp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:hint="Contact"
        android:layout_marginTop="40dp"
        android:textSize="25sp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginTop="35dp"
        android:textSize="15dp"
        android:text="Remember me"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="140sp"
            android:text="Forgot Password?"
            android:layout_weight="1"
            android:textSize="15dp"
            android:textColor="#c0392b"/>
    </LinearLayout>
    <Button
        android:id="@+id/btnRegister"
        android:layout_width="260dp"
        android:layout_height="65dp"
        android:layout_marginTop="40dp"
        android:layout_gravity="center"
        android:text="Register"
        android:textSize="35dp"
        android:backgroundTint="#EEAF2C1E"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="By Loggin in, you aggree to FoodApp's Terms of Services Cookie policy, Privacy Policy. "
        android:textSize="12dp"/>



</LinearLayout>